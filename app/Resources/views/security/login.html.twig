{% extends 'layouts/base.html.twig' %}

{% block body %}
    <div class="container content-container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post" class="login-form">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <input type="text" id="username" name="_username" placeholder="{% trans %}login.username{% endtrans %}" value="{{ last_username }}" />
                </div>
                <div class="col-sm-12 col-md-4">
                    <input type="password" id="password" placeholder="{% trans %}login.password{% endtrans %}" name="_password" />
                </div>
                <div class="col-sm-12 col-md-4">
                    <button type="submit" class="btn-enter">{% trans %}login.login{% endtrans %}</button>
                </div>

            </div>


            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

        </form>
    </div>
{% endblock %}